<UserControl x:Class="Maeily_Windows.Controls.ChannelUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maeily_Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="85">
    <Canvas Margin="5" Background="LightGray">
        <TextBlock x:Name="TxtChannelName" Foreground="White" Background="Transparent"
                   Canvas.Left="10" Canvas.Top="10" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
    </Canvas>
</UserControl>
