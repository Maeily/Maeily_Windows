<UserControl x:Class="Maeily_Windows.Controls.UserInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Maeily_Windows.Controls"
             mc:Ignorable="d"
             d:DesignHeight="70" d:DesignWidth="292">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image x:Name="image" Margin="40, 10, 30, 10" Width="40" Height="40" Stretch="Fill" />
        <TextBlock x:Name="TxtUserName" FontWeight="Bold" FontSize="15"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" />
    </StackPanel>
</UserControl>